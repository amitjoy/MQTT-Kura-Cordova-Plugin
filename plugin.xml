<?xml version="1.0" encoding="UTF-8"?>

<plugin xmlns="http://apache.org/cordova/ns/plugins/1.0" 
  id="org.pluginporo.mqtt_plugin" 
  version="0.0.1">

  <name>MqttPlugin</name>
  <description>MQTT Plugin</description>
  <license>Apache 2.0</license>
  <keywords>cordova, mqtt</keywords>

  <engines>
    <engine name="cordova" version=">=3.4.0"/>
  </engines>

  <asset src="www/mqtt_plugin.js" target="js/mqtt_plugin.js">

  <js-module src="www/mqtt_plugin.js" name="MqttPlugin">
    <clobbers target="navigator.mqtt_plugin" />
  </js-module>

  <!-- android -->
  <platform name="android">
    <config-file target="AndroidManifest.xml" parent="/*">
      <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
      <uses-permission android:name="android.permission.INTERNET" />
      <uses-permission android:name="android.permission.READ_LOGS" />
      <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
      <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
      <uses-permission android:name="android.permission.VIBRATE" />
    </config-file>

    <config-file target="res/xml/config.xml" parent="/*">
      <feature name="MqttPlugin">
        <param name="android-package" value="org.pluginporo.mqtt.MqttPlugin" />
        <param name="android-package" value="org.pluginporo.mqtt.GZipUtil" />
        <param name="android-package" value="org.pluginporo.mqtt.KuraPayload" />
        <param name="android-package" value="org.pluginporo.mqtt.KuraPayloadDecoder" />
        <param name="android-package" value="org.pluginporo.mqtt.KuraPayloadEncoder" />
        <param name="android-package" value="org.pluginporo.mqtt.KuraPayloadProto" />
        <param name="android-package" value="org.pluginporo.mqtt.KuraPosition" />
        <param name="android-package" value="org.pluginporo.mqtt.MessageListener" />
        <param name="android-package" value="org.pluginporo.mqtt.MQTTClientDemo" />
        <param name="android-package" value="org.pluginporo.mqtt.SimpleMQTTClient" />
      </feature>
    </config-file>

    <source-file src="src/android/libs/mqtt-client-1.10.jar" target-dir="libs" framework="true" />
    <source-file src="src/android/libs/protobuf-java-2.6.1.jar" target-dir="libs" framework="true"/>
    <source-file src="src/android/libs/slf4j-api-1.7.12.jar" target-dir="libs" framework="true"/>
    <source-file src="src/android/libs/hawtbuf-1.10.jar" target-dir="libs"/>
    
    <source-file src="src/android/MqttPlugin.java" target-dir="src/org/pluginporo/mqtt" />
    <source-file src="src/android/GZipUtil.java" target-dir="src/org/pluginporo/mqtt" />
    <source-file src="src/android/KuraPayload.java" target-dir="src/org/pluginporo/mqtt" />
    <source-file src="src/android/KuraPayloadDecoder.java" target-dir="src/org/pluginporo/mqtt" />
    <source-file src="src/android/KuraPayloadEncoder.java" target-dir="src/org/pluginporo/mqtt" />
    <source-file src="src/android/KuraPayloadProto.java" target-dir="src/org/pluginporo/mqtt" />
    <source-file src="src/android/KuraPosition.java" target-dir="src/org/pluginporo/mqtt" />
    <source-file src="src/android/MessageListener.java" target-dir="src/org/pluginporo/mqtt" />
    <source-file src="src/android/MQTTClientDemo.java" target-dir="src/org/pluginporo/mqtt" />
    <source-file src="src/android/SimpleMQTTClient.java" target-dir="src/org/pluginporo/mqtt" />

  </platform>

</plugin>